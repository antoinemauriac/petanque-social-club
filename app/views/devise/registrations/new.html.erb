<div class="flexy">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :username,
                  label: "Nom d'utilisateur (surnom)",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "username" },
                  hint: ("15 caractères maximum")%>
      <%= f.input :date_of_birth, as: :date,
                                start_year: Date.today.year - 90,
                                end_year: Date.today.year,
                                order: [:day, :month, :year],
                                label: "Date de naissance" %>
      <%= f.input :password,
                  label: "Mot de passe",
                  required: true,
                  hint: ("#{@minimum_password_length} charactères minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: "Confirmation du mot de passe",
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "C'est parti !", class: "btn-score btn btn-small btn-login" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
