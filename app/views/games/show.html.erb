
<div class="form-wrapper flexy">
  <%= form_with model: @game do |form| %>
    <div class="team-display first-team">
    <% @team1.users.each do |user| %>
    <span class ="message-avatar-date score-avatar"><%= cl_image_tag user.photo.key %> </span>
    <span class="score-text"><%= user.username %></span>
    <br>
    <% end %>
    </div>

  <%= form.text_area :score_first_team, :html => { :class => 'all-forms' } %>

    <div class="team-display second-team">
    <% @team2.users.each do |user| %>
    <span class="message-avatar-date-reverse score-avatar"><%= cl_image_tag user.photo.key %></span>
    <span class="score-text"><%= user.username %></span>
    <br>
    <% end %>
    </div>

  <%= form.text_area :score_second_team, :html => { :class => 'all-forms' } %>
  <%= form.submit "VALIDER", class: "btn btn-score btn-small" %>
  <% end %>
</div>
