<div class="bar light-blue-bar" id="bar-avatar">
  <h2>CHOISIS TON NOUVEL AVATAR</h2>
</div>
<div class="container container-new-avatar">
  <% @avatars.each do |a| %>
    <%= button_to image_tag("avatars/#{a.filename}"), {:controller => "profile_pictures", :action => "update", :avatar_id => a.id}, :method=>:patch, class: "btn-avatar"  %>
  <% end %>
</div>
